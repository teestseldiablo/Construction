import * as OrbitDB from 'orbit-db';
import { create } from 'ipfs-core';

async function startDatabase() {
  // 1. Start a free IPFS node in the browser
  const ipfs = await create();
  
  // 2. Initialize OrbitDB
  const orbitdb = await OrbitDB.createInstance(ipfs);

  // 3. Create a "Key-Value" database for your construction projects
  // This is completely free and decentralized
  const db = await orbitdb.keyvalue('construction_projects');
  await db.load();

  // 4. Add a project
  await db.put('project_001', { 
    name: 'Main St. Foundation', 
    status: 'In Progress',
    budget: '$0 (Web3 style!)' 
  });

  const project = db.get('project_001');
  console.log("Current Project Info:", project);
}
